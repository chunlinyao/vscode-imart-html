{
	"name": "imart-html",
	"description": "A language server to support imart jssp html files",
	"author": {
		"name": "Yao Chunlin",
		"url": "https://github.com/chunlinyao/vscode-imart-html.git",
		"email": "chunlinyao@gmail.com"
	},
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/chunlinyao/vscode-imart-html.git"
	},
	"publisher": "chunlinyao",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:html"
	],
	"main": "./client/out/extension",
	"contributes": {},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.4.3"
	}
}
